link(rel="stylesheet", href="/stylesheets/home.css")

div#wrapper-container.sidebarDisplayed
  //<button href="#" id="toggle-sidebar"><span class="btn glyphicon glyphicon-user"> </span> </a>
  include placeholders/sidebar
  // main content here.
  // Row 1:
  // Col A: Event details (right)
  // Col B: Map (left)
  // Row 2:
  // Col A: Chat Application
  div#page-content-wrapper
    div.container-fluid
      div.row
        div.col-lg-12
          h1 No events joined yet
        div.chatUI-container
          div.chatUI-statusBar
          div.chatUI-msgBody
            ul
              - for (i =0; i < 5; i ++){
              li.clearfix
                span.userImg.pull-left
                  img.img-circle(src="https://media.licdn.com/mpr/mpr/shrinknp_200_200/p/2/000/079/328/1630e0b.jpg", width="28", height="28")
                span.userMsgBody.clearfix
                  div.header
                    strong Brad
                    small.pull-right.text-muted
                      span.glyphicon.glyphicon-time
                      | 5 mins ago
                  p Hey man
              -}
          div.chatUI-usrInput
            div.input-group
              input.form-control(type='text', value='', id="inputSendMsg", placeholder="message #event")
              span.input-group-btn <button class="btn btn-primary" type="button"> Send </button>
  
script(src="/javascripts/home.js")
