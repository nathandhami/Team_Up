//- img(src= user.image) will be used for #account-img
//-  h4= user.name will be used instead of Brad
link(rel="stylesheet", href="/stylesheets/home.css")
link(rel="stylesheet", href="/stylesheets/customScrollbar.css")
include ./mixins/accordion-event.pug

aside.sidebarDisplayed
  //- Accordion display of events
  #page-content-wrapper
    .container-fluid
      .page-header
        h2 My Events
    .container-fluid.home_container
      row
        .col-md-3-offset-3.col
          div#accordion.panel-group
            - for (let i = 0; i < userEvents.length; i++) {
                +event-panel('collapse' + i, userEvents[i].teamupName, userEvents[i].from, userEvents[i].to,
                userEvents[i].sport, userEvents[i].locationName, userEvents[i].locationAddress, userEvents[i].users.length, userEvents[i].createdBy.email, userEvents[i].urlChat,
                userEvents[i].urlEdit, userEvents[i].urlLeave, userEvents[i].urlDelete, userEvents[i])
            - }

#editEventModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
        h3#myModalLabel Edit Event
      .modal-body
        h5
          .alert.alert-info.alert-dismissable
            a.panel-close.close(data-dismiss='alert') ×
            i.fa.fa-bell
            |     If you want to change the location of the event, please delete this event and 
            |         then create a new event with your desired location.
        form.form-horizontal(action="/edit", method="POST")
          input(type='hidden', name='_csrf', value= csrfToken)
          .form-group
            label.col-md-4.control-label TeamUp Name:
            .col-md-7
                input#teamupName.form-control(type='text', name='teamupName', placeholder='TeamUp', required='required', data-error='TeamUp Name is required.' value="hello")
          .form-group
            label.col-md-4.control-label From:
            .col-md-7
              .input-group.bootstrap-timepicker.timepicker
                input#from.form-control(type='text', name='from', placeholder='MM/DD/YYYY HH:MM AM', required='required', data-error='Start Date is required.')
                span.input-group-addon
                  i.fa.fa-calendar
          .form-group
            label.col-md-4.control-label To:
            .col-md-7
              .input-group.bootstrap-timepicker.timepicker
                input#to.form-control(type='text', name='to', placeholder='MM/DD/YYYY HH:MM AM')
                span.input-group-addon
                  i.fa.fa-calendar
          .form-group
            label.col-md-4.control-label Sport:
            .col-md-7
              input#sport.form-control(type='text', name='sport', placeholder='Sport', required='required', data-error='Sport is required.')
          .form-group
            label.col-md-4.control-label Name of Location:
            .col-md-7
              input#locationName.form-control(type='text', name='locationName', placeholder='Name of Location', required='required', data-error='Location Address is required.')
          .form-group
            label.col-md-4.control-label Address of Location:
            .col-md-7
              input#locationAddress.form-control(type='text', name='locationAddress', placeholder='Address of Location', required='required', data-error='Location Name is required.')
          .form-group
            button#editSaveBtn.btn.btn-success.pull-right(type='submit') Save Changes
            p#form-error.help-block.pull-left.text-danger.hide   The form is not valid.
      .modal-footer
        button.btn(data-dismiss='modal', aria-hidden='true') Cancel
        button.btn.btn-danger.pull-left(href='#') Delete Event

script(src="/javascripts/home.js")
