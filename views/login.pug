extends placeholders/header

block content
  link(rel='stylesheet', href='/bower_components/bootstrap-social/bootstrap-social.css')
  
  .container
      .row
        .col-xs-8.col-xs-push-2.col-sm-6.col-sm-push-3
          .page-header
            h3.text-center Sign In
          form(action='/login', method='post')
            .form-group
              label(for='email') Email:
              .input-group
                span.input-group-addon
                  i.glyphicon.glyphicon-user
                input#email.form-control(type='email', name='email', placeholder='Email')
            .form-group
              label(for='pwd') Password:
              .input-group
                span.input-group-addon
                  i.glyphicon.glyphicon-lock
                input#pwd.form-control(type='password', placeholder='Enter password', name='pwd')
            .checkbox
              label
                input(type='checkbox', name='remember')
                |  Remember me
            button.btn.btn-primary.btn-block(type='submit') Submit
            hr
            h5.text-center Social Media Sign In
            a.btn.btn-block.btn-social.btn-google(href="/auth/google")
              span.fa.fa-google
              |             Sign in with Google
            a.btn.btn-block.btn-social.btn-facebook(href="/auth/facebook")
              span.fa.fa-facebook
              |             Sign in with Facebook
            a.btn.btn-block.btn-social.btn-twitter(href="/auth/twitter")
              span.fa.fa-twitter
              |             Sign in with Twitter
  

      
