extends placeholders/header
block content
  #header
    h2 Create a Sports Event
    ul
      button.btn.btn-info(type='button', onclick='displayMarkers(1)')
        span
          img(src="https://png.icons8.com/soccer-ball/color/24")
          |  Soccer
      button.btn.btn-info(type='button', onclick='displayMarkers(2)')
        span
          img(src="https://png.icons8.com/basketball/color/24")
          |  Basketball
      button.btn.btn-info(type='button', onclick='displayMarkers(3)')
        span
          img(src="https://png.icons8.com/volleyball/color/24")
          |  Volleyball
      button.btn.btn-info(type='button', onclick='displayMarkers(4)')
        span
          img(src="https://png.icons8.com/baseball/color/24")
          |  Baseball
  input#pac-input.controls.col-xs-5(type='text', placeholder='Enter a Location')
  #map
  h3 Event Details
  #event-details.col-sm-11
    form.form-horizontal(role='form')
      .form-group
        label.col-sm-3.control-label Name:
        .col-sm-8
          input.form-control(type='text', placeholder='TeamUp')
      .form-group
        label.col-sm-3.control-label Sport:
        .col-sm-8
          input.form-control(type='text', placeholder='Sport')
      .form-group
        label.col-sm-3.control-label Location:
        .col-sm-8
          input.form-control(type='text', placeholder='Location')
      .form-group
        label.col-sm-3.control-label
        .col-sm-8
          button.btn.btn-primary.btn-block.hvr-grow(type='submit') Create Event(to be implemented)
  script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBOPHTiGEVhZh9LaKbtNjsSjvbD1R6r9Kw&libraries=places&callback=loadMap', async='', defer='')
  script(src='/javascripts/create.js')
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(rel="stylesheet", href="/stylesheets/create.css")

