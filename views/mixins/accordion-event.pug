mixin event-panel(collapseNum, teamupName, from, to, sport, locationName, locationAddress, url)
  .panel.panel-default
    .panel-heading.container-fluid
      .row
        h5.panel-title
          .col-md-4
            a(data-toggle="collapse", data-parent="#accordion", href= '#' + collapseNum)
              span= teamupName
          .col-md-6
            span#status
          div#participants.col-md-2.text-right
            abbr(title="Participants")
              <i class="fa fa-user"> 1/10  </i>
    div.panel-collapse.collapse(id=collapseNum)
      .panel-body
        p= 'From: ' + from
        p= 'To: ' + to
        p= 'Sport: ' + sport
        p= 'Location: ' + locationName
        p= 'Address: '  + locationAddress
        div
          a.btn.btn-default(role="button", href=url) Join chat
