mixin event-panel(collapseNum, teamupName, from, to, sport, maxPlayers, locationName, locationAddress, count, creatorEmail, urlChat, urlEdit, urlLeave, urlDelete, aliasId, event)
  .panel.panel-default
    .panel-heading.container-fluid
      .row
        h5.panel-title
          .col-md-4
            a(data-toggle="collapse", href= '#' + collapseNum)
              span= teamupName
          .col-md-6
            span#status
          div#participants.col-md-2.text-right
            abbr(title="Participants")
              i.fa.fa-user
                p= count + '/' + maxPlayers
    div.panel-collapse.collapse.in(id=collapseNum)
      .panel-body
        p= 'Sport: ' + sport
        p= 'Location: ' + locationName
        p= 'Address: '  + locationAddress
        p= 'From: ' + from
        p= 'To: ' + to
        div
          a.btn.btn-default(role="button", href=urlChat) Join chat
          a.btn.btn-default.participantsBtn(role="button", href="#", data-toggle='modal', data-target='#participantsModal') Who's going?
            input(type='hidden', value=event)
          if (creatorEmail != userData.email)
            a.btn.btn-default.pull-right.leaveEventBtn(role="button", href='#') Leave
              input(type='hidden', value=aliasId)
          else
            a.btn.btn-default.pull-right.editEventBtn(role="button", href='#', data-toggle='modal', data-target='#editEventModal') Edit
              input(type='hidden', value=event)
