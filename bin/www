'use strict';

const open = require('open');
const serverConfig = require('../server');
const https = require('https');
const nconf = require('./lib/config/nconfConfig');
const winston = require('./lib/config/winstonConfig');
const httpsOptions = require('./lib/config/sslConfig');
const PORT = nconf.get('http:port');

serverConfig.set('port', PORT);

const serverSSL = https.createServer(httpsOptions, serverConfig);

serverSSL.listen(PORT, (err) => {
  (err) ? winston.error(err) : baseurlDisplay();
});

// Predefined Display Info
const baseurlDisplay = () => {
  const baseurl = 'https://localhost:' + PORT + '/';
  winston.info('Listening on port: %s', PORT);
  winston.info('Serving at URL %s', baseurl);
  open(baseurl);
};
